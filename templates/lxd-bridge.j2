{{ ansible_managed | comment }}

## Ansible Template (called by /usr/lib/lxd/lxd-bridge)
# WARNING: This file is generated by a debconf template!
# It is recommended to update it by using "dpkg-reconfigure -p medium lxd"

# Whether to setup a new bridge or use an existing one
USE_LXD_BRIDGE="{{ lxd_bridgeconf_use_bridge }}"

# Bridge name
# This is still used even if USE_LXD_BRIDGE is set to false
# set to an empty value to fully disable
LXD_BRIDGE="{{ lxd_bridgeconf_bridge }}"

# Update the "default" LXD profile
UPDATE_PROFILE="true"

# Path to an extra dnsmasq configuration file
{% if lxd_dnsmasq_conf is defined and lxd_dnsmasq_conf %}
LXD_CONFILE="/etc/lxc/lxc-dnsmasq-hosts.conf"
{% else %}
LXD_CONFILE=""
{% endif %}

# DNS domain for the bridge
LXD_DOMAIN="lxd"

# IPv4
## IPv4 address (e.g. 10.0.8.1)
LXD_IPV4_ADDR="{{ lxd_bridgeconf_ipv4_addr }}"

## IPv4 netmask (e.g. 255.255.255.0)
LXD_IPV4_NETMASK="{{ lxd_bridgeconf_ipv4_netmask }}"

## IPv4 network (e.g. 10.0.8.0/24)
LXD_IPV4_NETWORK="{{ lxd_bridgeconf_ipv4_network }}"

## IPv4 DHCP range (e.g. 10.0.8.2,10.0.8.254)
LXD_IPV4_DHCP_RANGE="{{ lxd_bridgeconf_ipv4_dhcp_range }}"

## IPv4 DHCP number of hosts (e.g. 250)
LXD_IPV4_DHCP_MAX="{{ lxd_bridgeconf_ipv4_dhcp_max }}"

## NAT IPv4 traffic
LXD_IPV4_NAT="{{ lxd_bridgeconf_ipv4_nat | lower }}"

# IPv6
## IPv6 address (e.g. 2001:470:b368:4242::1)
LXD_IPV6_ADDR=""

## IPv6 CIDR mask (e.g. 64)
LXD_IPV6_MASK=""

## IPv6 network (e.g. 2001:470:b368:4242::/64)
LXD_IPV6_NETWORK=""

## NAT IPv6 traffic
LXD_IPV6_NAT="false"

# Run a minimal HTTP PROXY server
LXD_IPV6_PROXY="{{ lxd_bridgeconf_ipv6_proxy | lower }}"
