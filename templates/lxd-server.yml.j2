config:
  core.trust_password: {{ lxd_cluster_secret }}
  core.https_address: {{ ansible_default_ipv4.address }}:8443
  images.auto_update_interval: 15
storage_pools:
{% if not lxd_with_zfs_backend %}
- config:
  name: {{ lxd_storage_name }} 
  driver: dir
{% else %}
- config:
    size: {{ lxd_zfs_size }}
  description: ""
  name: {{ lxd_storage_name }}
  driver: zfs
{% endif %}
networks:
{% if lxd_bridgeconf_use_bridge %}
- name: {{ lxd_bridgeconf_bridge }}
  type: bridge
  config:
    ipv4.address: {{ lxd_bridgeconf_ipv4_network }}
    ipv6.address: none
{% endif %}
{% if lxd_fanconf_use_fan %}
- name: {{ lxd_fanconf_fan }}
  type: ""
  config:
    bridge.mode: fan
    fan.underlay_subnet: {{ lxd_fanconf_underlay_subnet }}
{% endif %}
profiles:
- config: {}
  name: default
  description: ""
  devices:
    root:
      path: /
      pool: {{ lxd_storage_name }}
      type: disk
    eth0:
      name: eth0
      nictype: bridged
      parent: {{ lxd_bridgeconf_bridge if not lxd_fanconf_use_fan else lxd_fanconf_fan }}
      type: nic
{% if lxd_cluster %}
cluster:
  server_name: {{ inventory_hostname }}
  enabled: true
  member_config: []
  cluster_address: ""
  cluster_certificate: ""
  server_address: ""
  cluster_password: ""
{% endif %}


